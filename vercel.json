{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/login/?",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/frontend/login.html"
    },
    {
      "src": "/adminSignup/?",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/frontend/adminSignup.html"
    },
    {
      "src": "/studentDashboard/?",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/frontend/studentDashboard.html"
    },
    {
      "src": "/teacherDashboard/?",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/frontend/teacherDashboard.html"
    },
    {
      "src": "/adminDashboard/?",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/frontend/adminDashboard.html"
    },
    {
      "src": "/styles.css",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/frontend/styles.css"
    },
    {
      "src": "/(.*)\\.(html|js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/frontend/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/frontend/index.html"
    }
  ]
}
